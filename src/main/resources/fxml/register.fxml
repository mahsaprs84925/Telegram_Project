<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telegram.controllers.RegisterController">
   <children>
      <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: #2C3E50;">
         <children>
            <!-- Header -->
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="Create Account" />
                  <Label style="-fx-text-fill: #BDC3C7; -fx-font-size: 14px;" text="Join Telegram Clone" />
               </children>
            </VBox>
            
            <!-- Registration Form -->
            <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 30px; -fx-pref-width: 450px;">
               <children>
                  <VBox spacing="8.0" prefWidth="400" maxWidth="400" fillWidth="true">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Username*" />
                        <TextField fx:id="usernameField" promptText="Choose a username" style="-fx-pref-height: 35px; -fx-font-size: 14px;" />
                        <Label fx:id="usernameRequirementsLabel" style="-fx-font-size: 11px; -fx-text-fill: #E67E22; -fx-font-weight: bold;" wrapText="true" maxWidth="Infinity" prefHeight="40" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" prefWidth="400" maxWidth="400" fillWidth="true">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Password*" />
                        <PasswordField fx:id="passwordField" promptText="Create a password" style="-fx-pref-height: 35px; -fx-font-size: 14px;" />
                        <Label fx:id="passwordRequirementsLabel" style="-fx-font-size: 11px; -fx-text-fill: #E67E22; -fx-font-weight: bold;" wrapText="true" maxWidth="Infinity" prefHeight="40" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" prefWidth="400" maxWidth="400">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Confirm Password*" />
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" style="-fx-pref-height: 35px; -fx-font-size: 14px;" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" prefWidth="400" maxWidth="400">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Profile Name*" />
                        <TextField fx:id="profileNameField" promptText="Your display name" style="-fx-pref-height: 35px; -fx-font-size: 14px;" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" prefWidth="400" maxWidth="400">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Bio (Optional)" />
                        <TextArea fx:id="bioField" prefRowCount="2" promptText="Tell us about yourself..." style="-fx-font-size: 14px;" wrapText="true" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" prefWidth="400" maxWidth="400">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Profile Picture (Optional)" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Button fx:id="browseButton" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-background-radius: 5px;" text="Browse..." />
                              <Label fx:id="profilePictureLabel" style="-fx-font-size: 12px; -fx-text-fill: #7F8C8D;" text="No file selected" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <Label fx:id="statusLabel" managed="false" style="-fx-font-size: 12px;" visible="false" wrapText="true" />
                  
                  <VBox alignment="CENTER" spacing="15.0">
                     <children>
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Button fx:id="registerButton" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5px;" text="Register" />
                              <ProgressIndicator fx:id="loadingIndicator" prefHeight="25.0" prefWidth="25.0" />
                           </children>
                        </HBox>
                        
                        <Button fx:id="cancelButton" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px;" text="Cancel" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets left="30.0" right="30.0" />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</VBox>
