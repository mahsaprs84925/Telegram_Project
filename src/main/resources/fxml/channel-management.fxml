<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telegram.controllers.ChannelManagementController">
   <center>
      <VBox spacing="20.0" styleClass="main-container">
         <children>
            <!-- Channel Header -->
            <VBox alignment="CENTER" spacing="15.0" styleClass="header-container">
               <children>
                  <StackPane>
                     <Circle fx:id="channelImageCircle" fill="#E0E0E0" radius="50.0" stroke="#CCCCCC" strokeWidth="2.0" />
                     <ImageView fx:id="channelImageView" fitHeight="100.0" fitWidth="100.0" preserveRatio="true" visible="false">
                        <clip>
                           <Circle radius="50.0" />
                        </clip>
                     </ImageView>
                     <Button fx:id="changeChannelPictureButton" onAction="#handleChangeChannelPicture" styleClass="camera-button" text="ðŸ“·" StackPane.alignment="BOTTOM_RIGHT" />
                  </StackPane>
                  <Label fx:id="channelNameLabel" styleClass="page-title" text="Channel Name" />
                  <Label fx:id="subscriberCountLabel" styleClass="field-label" text="0 subscribers" />
               </children>
            </VBox>
            
            <!-- Channel Information -->
            <TabPane fx:id="channelTabPane" tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <!-- Info Tab -->
                  <Tab text="Info">
                     <content>
                        <VBox spacing="15.0" styleClass="content-container">
                           <children>
                              <VBox spacing="8.0">
                                 <children>
                                    <Label styleClass="field-label" text="Channel Name:" />
                                    <TextField fx:id="channelNameField" styleClass="input-field" promptText="Channel name" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label styleClass="field-label" text="Description:" />
                                    <TextArea fx:id="descriptionField" styleClass="input-field" maxHeight="100.0" prefRowCount="4" promptText="Channel description..." wrapText="true" />
                                 </children>
                              </VBox>
                              
                              <CheckBox fx:id="privateChannelCheckBox" styleClass="form-checkbox" text="Private channel (invite only)" />
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label styleClass="field-label" text="Channel Type:" />
                                    <ComboBox fx:id="channelTypeComboBox" styleClass="input-field" prefWidth="200.0">
                                       <items>
                                          <String fx:value="News Channel" />
                                          <String fx:value="Entertainment" />
                                          <String fx:value="Educational" />
                                          <String fx:value="Business" />
                                          <String fx:value="Technology" />
                                          <String fx:value="Sports" />
                                          <String fx:value="General" />
                                       </items>
                                    </ComboBox>
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0" fx:id="inviteLinkSection">
                                 <children>
                                    <Label styleClass="field-label" text="Invite Link:" />
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                       <children>
                                          <TextField fx:id="inviteLinkField" styleClass="input-field" editable="false" HBox.hgrow="ALWAYS" />
                                          <Button fx:id="copyInviteLinkButton" onAction="#handleCopyInviteLink" styleClass="secondary-action-button" text="Copy" />
                                          <Button fx:id="regenerateInviteLinkButton" onAction="#handleRegenerateInviteLink" styleClass="secondary-action-button" text="Regenerate" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  
                  <!-- Subscribers Tab -->
                  <Tab text="Subscribers">
                     <content>
                        <VBox spacing="10.0" styleClass="content-container">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <TextField fx:id="searchSubscribersField" styleClass="input-field" promptText="Search subscribers..." HBox.hgrow="ALWAYS" />
                                    <Button fx:id="inviteSubscriberButton" onAction="#handleInviteSubscriber" styleClass="primary-action-button" text="Invite User" />
                                 </children>
                              </HBox>
                              
                              <ListView fx:id="subscribersListView" styleClass="list-view" prefHeight="200.0" />
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  
                  <!-- Admins Tab -->
                  <Tab text="Admins">
                     <content>
                        <VBox spacing="15.0" styleClass="content-container">
                           <children>
                              <Label styleClass="section-title" text="Channel Admins" />
                              
                              <ListView fx:id="adminsListView" styleClass="list-view" prefHeight="150.0" />
                              
                              <HBox spacing="10.0">
                                 <children>
                                    <Button fx:id="promoteToAdminButton" onAction="#handlePromoteToAdmin" styleClass="secondary-action-button" text="Promote Selected to Admin" />
                                    <Button fx:id="removeAdminButton" onAction="#handleRemoveAdmin" styleClass="danger-button" text="Remove Admin" />
                                 </children>
                              </HBox>
                              
                              <Separator />
                              
                              <Label styleClass="section-title" text="Admin Permissions" />
                              <CheckBox fx:id="canPostMessagesCheckBox" styleClass="form-checkbox" selected="true" text="Can post messages" />
                              <CheckBox fx:id="canEditMessagesCheckBox" styleClass="form-checkbox" text="Can edit messages" />
                              <CheckBox fx:id="canDeleteMessagesCheckBox" styleClass="form-checkbox" text="Can delete messages" />
                              <CheckBox fx:id="canInviteUsersCheckBox" styleClass="form-checkbox" text="Can invite users" />
                              <CheckBox fx:id="canRestrictMembersCheckBox" styleClass="form-checkbox" text="Can restrict members" />
                              <CheckBox fx:id="canPinMessagesCheckBox" styleClass="form-checkbox" text="Can pin messages" />
                              <CheckBox fx:id="canAddAdminsCheckBox" styleClass="form-checkbox" text="Can add new admins" />
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  
                  <!-- Analytics Tab -->
                  <Tab text="Analytics">
                     <content>
                        <VBox spacing="15.0" styleClass="content-container">
                           <children>
                              <Label styleClass="section-title" text="Channel Statistics" />
                              
                              <GridPane hgap="20.0" vgap="10.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                                 <children>
                                    <Label styleClass="field-label" text="Total Subscribers:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <Label fx:id="totalSubscribersLabel" styleClass="field-value" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <Label styleClass="field-label" text="Total Messages:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <Label fx:id="totalMessagesLabel" styleClass="field-value" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label styleClass="field-label" text="Active Today:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <Label fx:id="activeTodayLabel" styleClass="field-value" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label styleClass="field-label" text="Created:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <Label fx:id="createdDateLabel" styleClass="field-value" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                 </children>
                              </GridPane>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
            
            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15.0" styleClass="button-container">
               <children>
                  <Button fx:id="saveChannelButton" onAction="#handleSaveChannel" styleClass="primary-action-button" text="Save Changes" />
                  <Button fx:id="cancelChannelButton" onAction="#handleCancel" styleClass="secondary-action-button" text="Cancel" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="deleteChannelButton" onAction="#handleDeleteChannel" styleClass="danger-button" text="Delete Channel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
