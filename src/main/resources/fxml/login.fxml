<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telegram.controllers.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="40.0" styleClass="login-background">
         <children>
            <!-- Header -->
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label styleClass="large-title" text="Telegram Clone" />
                  <Label styleClass="subtitle-text" text="Sign in to your account" />
               </children>
            </VBox>
            
            <!-- Login Form -->
            <VBox alignment="CENTER" spacing="25.0" styleClass="card-background">
               <children>
                  <VBox spacing="12.0">
                     <children>
                        <Label styleClass="field-label" text="Username" />
                        <TextField fx:id="usernameField" promptText="Enter your username" styleClass="large-text-field" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="12.0">
                     <children>
                        <Label styleClass="field-label" text="Password" />
                        <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="large-text-field" />
                     </children>
                  </VBox>
                  
                  <Label fx:id="statusLabel" managed="false" styleClass="small-label" visible="false" wrapText="true" />
                  
                  <VBox alignment="CENTER" spacing="20.0">
                     <children>
                        <VBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Button fx:id="loginButton" prefHeight="50.0" prefWidth="150.0" styleClass="login-button" text="Login" />
                              <ProgressIndicator fx:id="loadingIndicator" prefHeight="30.0" prefWidth="30.0" />
                           </children>
                        </VBox>
                        
                        <Separator prefWidth="250.0" styleClass="gray-separator" />
                        
                        <Button fx:id="registerButton" prefHeight="45.0" prefWidth="150.0" styleClass="register-button" text="Create Account" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
